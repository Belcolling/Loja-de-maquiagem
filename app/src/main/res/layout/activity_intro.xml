<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">

    <ImageView
        android:id="@+id/Pocompacto"
        android:layout_width="239dp"
        android:layout_height="246dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="261dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pocompacto" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="125dp"
        android:layout_height="98dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/Pocompacto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/PoCompactoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="187dp"
        android:text="PÓ COMPACTO LUXO"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pocompacto" />

    <TextView
        android:id="@+id/DescricaoText"
        android:layout_width="405dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="83dp"
        android:text="VENHA CONHECER NOSSO MARAVILHOSO PÓ COMPACTO LUXO DEIXA UM BRILHO IMENSURÁVEL NA PELE."
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PoCompactoText" />
</androidx.constraintlayout.widget.ConstraintLayout>